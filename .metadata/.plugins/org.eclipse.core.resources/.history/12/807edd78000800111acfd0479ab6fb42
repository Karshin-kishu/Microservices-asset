package com.example.service;

import java.util.Date;

import org.springframework.security.core.userdetails.UserDetails;

import io.jsonwebtoken.Claims;
import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.security.Keys;

public class JwtService {
	 	@Autowired
	    private JwtUtil jwtUtil;

	    // =====================================================
	    // ðŸ”¹ STEP 1: Generate token (called after login success)
	    // AuthController â†’ JwtService â†’ JwtUtil
	    // =====================================================
	    public String generateToken(String username) {
	        return jwtUtil.generateToken(username);
	    }

	    // =====================================================
	    // ðŸ”¹ STEP 2: Extract username from JWT
	    // JwtFilter â†’ JwtService â†’ JwtUtil
	    // =====================================================
	    public String extractUsername(String token) {
	        return jwtUtil.extractUsername(token);
	    }

	    // =====================================================
	    // ðŸ”¹ STEP 3: Validate JWT
	    // JwtFilter â†’ JwtService â†’ JwtUtil.validateToken()
	    // =====================================================
	    public boolean validateToken(String token, String username) {
	        return jwtUtil.validateToken(token, username);
	    }
}
